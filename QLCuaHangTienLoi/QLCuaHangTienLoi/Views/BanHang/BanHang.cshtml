@model IEnumerable<QLCuaHangTienLoi.Models.sanPham>
@{
    ViewBag.Title = "BanHang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<section>
    <div class="container">
        <img src="~/images/hero-bg.jpg" style="width:100%" />
        <div class="row">
            
            <div class="col-sm-3">
                <div class="left-sidebar">
                    <h2>DANH MỤC</h2>
                    <div class="panel-group category-products" id="accordian">
                        @Html.Action("LoaiSP", "BanHang")
                    </div>
                </div>
            </div>

            <div class="col-sm-9 padding-right">
                <div class="features_items">
                    <!--features_items-->
                    <h2 class="title text-center">SẢN PHẨM MỚI NHẤT</h2>
                    
                    @foreach (var sanPham in Model)
                    {
                        <div class="col-sm-3 col-lg-3 col-md-3">
                            <div class="product-image-wrapper">
                                <div class="single-products">
                                    <div class="productinfo text-center">

                                        <img alt="@sanPham.tenSP" src="~/images/@sanPham.hinhDD" width="183px" height="183px" />
                                        <div>
                                            <br />
                                            <h4 style="text-align:center">
                                                @sanPham.tenSP
                                            </h4>
                                            <p></p>
                                        </div>
                                        <h2>@sanPham.giaBan VND</h2>
                                        
                                        <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Chi tiết sản phẩm</a>

                                    </div>
                                    <div class="product-overlay">
                                        <div class="overlay-content">
                                            <h2>@sanPham.giaBan VND</h2>
                                            
                                            <a href="@Url.Action("Details","BanHang", new { id= sanPham.maSP})"><i class="fa fa-shopping-cart"></i> Chi tiết sản phẩm</a>
                                        </div>
                                    </div>
                                </div>
                                @*<div class="choose">
                                    <ul class="nav nav-pills nav-justified">
                                        <li><a href="#"><i class="fa fa-plus-square"></i>Thêm vào giỏ hàng</a></li>
                                        
                                    </ul>
                                </div>*@
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>

    </div>
</section>


